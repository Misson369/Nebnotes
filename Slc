        <a href="javascript:void(0)" onclick="showContent('model12')">Class 12 Model Questions</a>
        <a href="javascript:void(0)" onclick="showThemeOptions()">Settings</a>
        <div id="themeOptions" style="display: none; padding: 15px 25px; color: #ffffff;">
            <p>Select Theme:</p>
            <a href="javascript:void(0)" onclick="toggleTheme('light')">Light Theme</a>
            <a href="javascript:void(0)" onclick="toggleTheme('dark')">Dark Theme</a>
        </div>
    </div>

